include /etc/sway/config.d/*

exec gsettings set $gnome-schema gtk-theme 'adwaita-dark'
exec gsettings set $gnome-schema icon-theme 'adwaita-dark'
exec gsettings set $gnome-schema cursor-theme 'adwaita-dark'
